<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity MiddlemanRequest.
    -->
    <changeSet id="20190721035735-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="trade_id"
                                 baseTableName="middleman_request"
                                 constraintName="fk_middleman_request_trade_id"
                                 referencedColumnNames="id"
                                 referencedTableName="trade"/>

        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="middleman_request"
                                 constraintName="fk_middleman_request_owner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="recipient_id"
                                 baseTableName="middleman_request"
                                 constraintName="fk_middleman_request_recipient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
